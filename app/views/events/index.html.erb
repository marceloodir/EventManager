<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Avatar</th>
      <th>Data</th>
      <th>Criador</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.titulo %></td>
        <td><%= event.descricao %></td>
        <td><%= image_tag event.avatar.url(:small) %></td>
        <td><%= event.data %></td>
        <td><%= event.criador %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Participar', new_participant_path(:event_id => event.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

