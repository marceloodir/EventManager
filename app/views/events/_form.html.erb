<%= form_for @event, url: events_path, html: { multipart: true } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.file_field :avatar, class: "form-control", accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>
  <div class="form-group">
    <%= f.label :data %><br>
    <%= f.datetime_select :data, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :criador_id %><br>
    <%= f.text_field :criador_id, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit 'Criar Evento', class: "btn btn-default" %>
  </div>
<% end %>
